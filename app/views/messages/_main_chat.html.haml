  .chat-main__message-form
    = form_for [@group, @message] ,class: 'chat-main__message-form__new-message' do |f|
      = f.text_field :content, class: 'chat-main__message-form__new-message', placeholder: 'type a message'
      .chat-main__message-form__new-message__input-box
        = f.label :image, class: 'chat-main__message-form__new-message__input-box__img' do
          = icon('fa', 'image', class: 'icon')
          -# %i.fa.fa-image

          = f.file_field  :image, class: 'chat-main__message-form__new-message__input-box__img--remove'
      = f.submit 'Send', class: 'chat-main__message-form__new-message__submit-box'
      
